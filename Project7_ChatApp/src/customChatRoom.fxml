<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: #202124;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ChatClient">
   <children>
      <Label layoutX="14.0" layoutY="14.0" prefHeight="33.0" prefWidth="250.0" text="Enter Users to add:" textAlignment="CENTER" textFill="#fcfcfc">
         <font>
            <Font name="Futura Medium" size="25.0" />
         </font>
      </Label>
      <TextField fx:id="usersToAddField" blendMode="LIGHTEN" layoutX="14.0" layoutY="47.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="53.0" prefWidth="290.0" promptText="Enter username">
         <font>
            <Font name="Futura Medium" size="25.0" />
         </font>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </TextField>
      <Button fx:id="addUsersBtn" layoutX="304.0" layoutY="47.0" mnemonicParsing="false" onMouseClicked="#validateUser" prefHeight="53.0" prefWidth="81.0" style="-fx-background-color: #0084ff#0084ff;" text="Add" textFill="WHITE">
         <font>
            <Font name="Futura Medium" size="18.0" />
         </font>
      </Button>
      <Button fx:id="createNewChatroomBtn" layoutX="115.0" layoutY="230.0" mnemonicParsing="false" onMouseClicked="#createNewChatRoom" prefHeight="53.0" prefWidth="171.0" style="-fx-background-color: #0084ff#0084ff;" text="Create Chatroom" textFill="WHITE">
         <font>
            <Font name="Futura Medium" size="18.0" />
         </font>
      </Button>
      <TextField fx:id="newChatName" blendMode="LIGHTEN" layoutX="14.0" layoutY="170.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="53.0" prefWidth="373.0" promptText="Enter Chat Name">
         <font>
            <Font name="Futura Medium" size="25.0" />
         </font>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </TextField>
      <Label layoutX="14.0" layoutY="132.0" prefHeight="33.0" prefWidth="250.0" text="Enter Chat name:" textAlignment="CENTER" textFill="#fcfcfc">
         <font>
            <Font name="Futura Medium" size="25.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
